# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=GenAI Document Assistant
VERSION=1.0.0
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# Database
DATABASE_URL=sqlite:///./data/app.db

# Redis
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview
MAX_TOKENS=2000
TEMPERATURE=0.1

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32

# Vector Database
VECTOR_DB_TYPE=faiss
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
FAISS_INDEX_PATH=./data/faiss_index
QDRANT_URL=
QDRANT_API_KEY=

# Document Processing
MAX_FILE_SIZE=104857600
SUPPORTED_FORMATS=["pdf", "txt", "docx", "md", "html"]
UPLOAD_DIR=./data/uploads
PROCESSED_DIR=./data/processed

# Text Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOCUMENT=1000

# Search Configuration
DEFAULT_SEARCH_K=5
MAX_SEARCH_K=20
SIMILARITY_THRESHOLD=0.7
HYBRID_SEARCH_ALPHA=0.7

# Question Generation
DEFAULT_QUESTIONS_PER_DOCUMENT=3
MAX_QUESTIONS_PER_DOCUMENT=10
QUESTION_DIFFICULTIES=["easy", "medium", "hard"]

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_SEMANTIC_CACHE=true
ENABLE_QUESTION_GENERATION=true
ENABLE_DOCUMENT_SUMMARIZATION=true
ENABLE_HYBRID_SEARCH=true 